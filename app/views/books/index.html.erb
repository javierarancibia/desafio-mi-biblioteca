<p id="notice"><%= notice %></p>
<h1>Biblioteca Personal</h1>
<%= link_to 'Agrega un libro', new_book_path %>

<br>
<table>
    <thead>
        <tr>
            <th>Titulo</th>
            <th>Descripcion</th>
            <th>Autor</th>
            <th>Estado</th>
            <th>Fecha de Prestamos</th>
            <th>Fecha de Entrega</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.description %></td>
            <td><%= book.author %></td>
            <td><%= book.status %></td>
            <td><%= book.date_out %></td>
            <td><%= book.date_back %></td>
            <td><%= link_to 'Show', book %></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>